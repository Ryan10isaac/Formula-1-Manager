<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="teamFormation.css">
</head>

<body>`
	<header>
		{{#clubinfo}}
		F<i class="fa fa-futbol-o" style="font-size: 22px;"></i>rmula 1 Formations :
		{{clubname}}


		<button class="btnPSelect"><a href="/globalplayers">Select Players</a></button>
	</header>
	<main>

		
		<div class="pitch">
			<h4>{{clubformation}}</h4>

			{{/clubinfo}}

			{{#result}}
			<div class="container">
				<div class="box1">
					<div class="pen1">
						<div class="pos" id="p1" style="margin: 20px 70px;"><img src="racer.png">{{soft}}</div>
					</div>
				</div>
				<div class="pos"  id="p2" style="margin: 120px 60px"><img src="racer.png">{{medium}}</div>
				<div class="pos" id="p3" style="margin: 70px 230px;"><img src="racer.png">{{hard}}</div>
				<div class="pos" id="p4" style="margin: 180px 230px"><img src="racer.png">{{inter}}</div>
				<div class="pos" id="p5"style="margin: 230px 65px"><img src="racer.png">{{wet}}</div>

				<div class="pos"id="p6" style="margin: 270px 230px"><img src="racer.png">{{sub1}}</div>
				{{!-- <div class="pos"id="p7" style="margin: 250px 126px"><img src="racer.png">{{sub2}}</div> --}}

				<div class="half"></div>
				<div class="box2">
					<div class="pen2"></div>
				</div>
			</div>
		</div>
		<!--442-->
		<main>

			<ul class="ul">
				<li><div id="side-card">{{soft}}<button class="delete-btn"><a href="/deleteplayer?position=soft">Delete</a></button></div></li>
				<li><div id="side-card">{{medium}}<button class="delete-btn"><a href="/deleteplayer?position=medium">Delete</a></button></div></li>
				<li><div id="side-card">{{hard}}<button class="delete-btn"><a href="/deleteplayer?position=hard">Delete</a></button></div></li>
				<li><div id="side-card">{{inter}}<button class="delete-btn"><a href="/deleteplayer?position=inter">Delete</a></button></div></li>
				<li><div id="side-card">{{wet}}<button class="delete-btn"><a href="/deleteplayer?position=wet">Delete</a></button></div></li>
				<li><div id="side-card">{{sub1}}<button class="delete-btn"><a href="/deleteplayer?position=sub1">Delete</a></button></div></li>
				<li><div id="side-card">{{sub2}}<button class="delete-btn"><a href="/deleteplayer?position=sub2">Delete</a></button></div></li>
			</ul>


			
		{{/result}}



			<!-- player Card-->

	<div id="card" class="card-container">
		<div class="card" >
			<div class="card-image" id="player-image">
		</div>
		<h2 id="player-name"></h2>
		<ul>
			<li class="list" id="player-club"></li>
			<li class="list" id="player-country"></li>
			<li class="list" id="player-skills"></li>
			<li class="list" id="player-rating"></li>
		</ul>
		</div>
	</div>


	<script  src="formation.js"></script>
	
</body>